{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "baseUrl": "./src",
    "isolatedModules": true,
    "outDir": "./dist",
    "paths": {
      "@constants/*": ["constants/*"],
      "@handlers/*": ["handlers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
